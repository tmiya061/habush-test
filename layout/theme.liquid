    <script>
      document.addEventListener("DOMContentLoaded", function() {
          // クッキーを取得する関数
          function getCookie(name) {
              let match = document.cookie.match(new RegExp("(^| )" + name + "=([^;]+)"));
              return match ? match[2] : null;
          }
      
          // クッキーを設定する関数（有効期限を30日とする）
          function setCookie(name, value, days) {
              let expires = "";
              if (days) {
                  let date = new Date();
                  date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                  expires = "; expires=" + date.toUTCString();
              }
              document.cookie = name + "=" + value + "; path=/" + expires;
          }
      
          // クッキーの値を確認して #start-modal を非表示にする
          if (getCookie("ageConfirmed") === "true") {
              document.getElementById("start-modal").style.display = "none";
              document.documentElement.style.overflow = "visible";
          } else {
            const modal = document.querySelector(".c-modal-start");
            if (modal) {
              modal.classList.add("js-show");
            }
            document.documentElement.style.overflow = "hidden";
          }
        
          // .yes_btn をクリックしたらクッキーを設定し、#start-modal を非表示にする
          document.querySelector("#start-modal .yes_btn").addEventListener("click", function() {
              setCookie("ageConfirmed", "true", 30); // クッキーを30日間保存
              document.getElementById("start-modal").style.display = "none";
            document.documentElement.style.overflow = "visible";
          });
      });
    </script>
    
