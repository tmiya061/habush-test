<script>
function removeTaxLabels() {
  // .totals__total-value から (税込) や (tax included) を削除
  const totalValueEls = document.querySelectorAll('.totals__total-value');
  totalValueEls.forEach(el => {
    el.textContent = el.textContent
      .replace(/\(税込\)/gi, '')
      .replace(/\(tax included\)/gi, '');
  });

  // .tax-note の先頭の不要な表現を削除
  const taxNoteEls = document.querySelectorAll('.tax-note');
  taxNoteEls.forEach(el => {
    el.textContent = el.textContent
      .replace(/^税込(で)?(、)?\s*/gi, '')
      .replace(/^価格です(。)?\s*/gi, '')
      .replace(/^Tax included(。)?\s*/gi, '');
  });
}

window.addEventListener("load", function () {
  setTimeout(function () {
    if (document.body.classList.contains('us-dollar')) {
      removeTaxLabels(); // 初期表示
    }

    // すべての.quantity__buttonにクリックイベントを追加
    document.querySelectorAll('.cart-quantity .quantity__button').forEach(btn => {
      btn.addEventListener('click', function () {
        setTimeout(removeTaxLabels, 300); // DOMが更新されるタイミングを少し待って実行
      });
    });

    // すべての.cart-remove-buttonにクリックイベントを追加
    document.querySelectorAll('cart-remove-button').forEach(btn => {
      btn.addEventListener('click', function () {
        setTimeout(removeTaxLabels, 300); // 同上
      });
    });
  }, 1000);
});

</script>


